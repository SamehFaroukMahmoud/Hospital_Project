@model Hospital.Models.Prescription

@{
    ViewData["Title"] = "Create Prescription";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h4 class="mb-0">Create New Prescription</h4>
        </div>
        <div class="card-body">
            <form asp-action="CreatePrescription">
                <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="PatientId" class="form-label">Patient</label>
                            @Html.DropDownListFor(model => model.PatientId, (SelectList)ViewBag.listOfPatient, "Select Patient", new { @class = "form-select" })
                            <span asp-validation-for="PatientId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DoctorId" class="form-label">Doctor</label>
                            @Html.DropDownListFor(model => model.DoctorId, (SelectList)ViewBag.listOfDoctor, "Select Doctor", new { @class = "form-select" })
                            <span asp-validation-for="DoctorId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Medication" class="form-label">Medication</label>
                            <input asp-for="Medication" class="form-control" placeholder="Enter Medication Name" />
                            <span asp-validation-for="Medication" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DosageInstructions" class="form-label">Dosage Instructions</label>
                            <input asp-for="DosageInstructions" class="form-control" placeholder="Enter Dosage Instructions" />
                            <span asp-validation-for="DosageInstructions" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="StartDate" class="form-label">Start Date</label>
                            <input asp-for="StartDate" class="form-control" type="date" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="EndDate" class="form-label">End Date</label>
                            <input asp-for="EndDate" class="form-control" type="date" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary me-2">Create</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

