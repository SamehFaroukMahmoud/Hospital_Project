@model Hospital.Models.Prescription

@{
    ViewData["Title"] = "Prescription Details";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0">Prescription Details</h5>
    </div>
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-4 fw-bold">Patient</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.patient.Name)</dd>

            <dt class="col-sm-4 fw-bold">Doctor</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.doctor.Name)</dd>

            <dt class="col-sm-4 fw-bold">Medication</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Medication)</dd>

            <dt class="col-sm-4 fw-bold">Dosage Instructions</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.DosageInstructions)</dd>

            <dt class="col-sm-4 fw-bold">Start Date</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.StartDate)</dd>

            <dt class="col-sm-4 fw-bold">End Date</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.EndDate)</dd>
        </dl>
    </div>
</div>

<div class="d-flex justify-content-between mt-4">
    <a asp-action="EditePrescription" asp-route-id="@Model?.Id" class="btn btn-primary">
        <i class="bi bi-pencil-square me-1"></i>Edit
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i>Back to List
    </a>
</div>
