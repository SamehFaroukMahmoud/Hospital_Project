@model Hospital.Models.Prescription

@{
    ViewData["Title"] = "Edit Prescription";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0">Edit Prescription</h5>
    </div>
    <div class="card-body">
        <form asp-action="EditePrescription">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="Id" />

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="PatientId" class="form-label">Patient</label>
                        @Html.DropDownListFor(model => model.PatientId, (SelectList)ViewBag.listOfPatient, "Select", new { @class = "form-select" })
                        <span asp-validation-for="PatientId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="DoctorId" class="form-label">Doctor</label>
                        @Html.DropDownListFor(model => model.DoctorId, (SelectList)ViewBag.listOfDoctor, "Select", new { @class = "form-select" })
                        <span asp-validation-for="DoctorId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Medication" class="form-label">Medication</label>
                        <input asp-for="Medication" class="form-control" />
                        <span asp-validation-for="Medication" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="DosageInstructions" class="form-label">Dosage Instructions</label>
                        <input asp-for="DosageInstructions" class="form-control" />
                        <span asp-validation-for="DosageInstructions" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="StartDate" class="form-label">Start Date</label>
                        <input asp-for="StartDate" type="date" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="EndDate" class="form-label">End Date</label>
                        <input asp-for="EndDate" type="date" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6 d-flex align-items-end">
                    <button type="submit" class="btn btn-success w-100">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="d-flex justify-content-between mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
