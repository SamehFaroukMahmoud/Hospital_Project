@model Hospital.Models.Appointment

@{
    ViewData["Title"] = "Edit Appointment";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Edit Appointment</h5>
    </div>
    <div class="card-body">
        <form asp-action="EditeAppointment">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        <label asp-for="Date" class="form-label">Date</label>
                        <input asp-for="Date" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        <label asp-for="PatientId" class="form-label">Patient</label>
                        @Html.DropDownListFor(model => model.PatientId, (SelectList)ViewBag.GetListPatients, "Select Patient", new { @class = "form-select" })
                        <span asp-validation-for="PatientId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        <label asp-for="DoctorId" class="form-label">Doctor</label>
                        @Html.DropDownListFor(model => model.DoctorId, (SelectList)ViewBag.GetListDoctor, "Select Doctor", new { @class = "form-select" })
                        <span asp-validation-for="DoctorId" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        <label asp-for="Status" class="form-label">Status</label>
                        @Html.DropDownListFor(model => model.Status, (SelectList)ViewBag.GetListStatus, "Select Status", new { @class = "form-select" })
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <button type="submit" class="btn btn-primary w-100">Save</button>
            </div>
        </form>
    </div>
</div>

<div class="d-flex justify-content-between mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
