@model Hospital.Models.Appointment

@{
    ViewData["Title"] = "CreateAppointment";
}

<div class="card shadow-sm mt-4">

    <div class="card-header bg-success text-white">
        <h5 class="mb-0">Create New Doctor</h5>
    </div>
    <div class="card-body">
        <form asp-action="CreatAppointment">
@*             <div asp-validation-summary="All" class="alert alert-danger mb-4" role="alert"></div>
 *@
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Date" class="form-label">Appointment Date</label>
                        <input asp-for="Date" class="form-control" placeholder="Select Appointment Date" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="PatientId" class="form-label">Patient</label>
                        @Html.DropDownListFor(model => model.PatientId, (SelectList)ViewBag.GetListPatients, "Select Patient", new { @class = "form-select" })
                        <span asp-validation-for="PatientId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="DoctorId" class="form-label">Doctor</label>
                        @Html.DropDownListFor(model => model.DoctorId, (SelectList)ViewBag.GetListDoctor, "Select Doctor", new { @class = "form-select" })
                        <span asp-validation-for="DoctorId" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Status" class="form-label">Status</label>
                        @Html.DropDownListFor(model => model.Status, (SelectList)ViewBag.GetListStatus, "Select Status", new { @class = "form-select" })
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-success">Create</button>
            </div>
        </form>
    </div>
</div>

<div class="d-flex justify-content-between">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
