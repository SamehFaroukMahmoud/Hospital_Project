@model Hospital.Models.MedicalRecord

@{
    ViewData["Title"] = "Edit Medical Record";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Edit Medical Record</h5>
    </div>
    <div class="card-body">
        <form asp-action="EditeMedicalRecord">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="Id" />

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="PatientId" class="form-label">Patient</label>
                        @Html.DropDownListFor(model => model.PatientId, (SelectList)ViewBag.listOfPatient, "Select", new { @class = "form-select" })
                        <span asp-validation-for="PatientId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="DoctorId" class="form-label">Doctor</label>
                        @Html.DropDownListFor(model => model.DoctorId, (SelectList)ViewBag.listOfDoctor, "Select", new { @class = "form-select" })
                        <span asp-validation-for="DoctorId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Diagnosis" class="form-label">Diagnosis</label>
                        <input asp-for="Diagnosis" class="form-control" />
                        <span asp-validation-for="Diagnosis" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="TreatmentPlan" class="form-label">Treatment Plan</label>
                        <input asp-for="TreatmentPlan" class="form-control" />
                        <span asp-validation-for="TreatmentPlan" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="PrescriptionId" class="form-label">Prescription</label>
                        @Html.DropDownListFor(model => model.PrescriptionId, (SelectList)ViewBag.listOfPrescription, "Select", new { @class = "form-select" })
                        <span asp-validation-for="PrescriptionId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="d-flex justify-content-between mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
